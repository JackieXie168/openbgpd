#!/bin/sh

set -e

uid=`getent passwd bgpd | cut -d ":" -f 3`

if ! [ "$uid" ]; then
        adduser --quiet \
                --system \
                --disabled-password \
                --home /var/run \
                --no-create-home \
                --shell /bin/bash \
                --group \
                bgpd
fi

